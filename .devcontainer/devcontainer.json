{
	"name": "Turtlesim",
	"build": {
		"context": "..",
		"dockerfile": "../docker/workspace.Dockerfile",
		"args": {
			"ROS_DISTRO": "foxy"
		}
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"twxs.cmake",
	],
	"workspaceFolder": "/dev_ws/src/${localWorkspaceFolderBasename}",
	"workspaceMount": "src=${localWorkspaceFolder},target=/dev_ws/src/${localWorkspaceFolderBasename},type=bind",
}